<?xml version="1.0" encoding="utf-8"?>
<!--
    IMPORTANTE: Para que el icono del menú (hamburguesa) funcione y abra un menú lateral,
    el layout principal DEBE ser un DrawerLayout.
-->
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_pedidos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PedidosActivity"
    tools:openDrawer="start"
    android:background="@android:color/white">

    <!-- Contenido principal (Donde están el Toolbar y la lista) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 1. Toolbar: Usamos el color ya definido 'yourPrimaryColor'. -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_pedidos"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/yourPrimaryColor"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Pedidos"
            app:titleTextColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 2. RecyclerView: Contenedor principal para la lista de pedidos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_pedidos"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/toolbar_pedidos"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/list_item_pedido" />

        <!-- 3. TextView: Mensaje para cuando la lista de pedidos está vacía -->
        <TextView
            android:id="@+id/tv_empty_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No hay pedidos para mostrar en este momento."
            android:textColor="@color/darker_gray"
            android:textSize="18sp"
            android:textStyle="italic"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_pedidos"
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 4. Cajón de Navegación Lateral (Menú que se desliza desde la izquierda) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_pedidos"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_lateral" />

</androidx.drawerlayout.widget.DrawerLayout>