<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.VentasFisicasActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FDD835"
            app:theme="@style/ThemeOverlay.AppCompat.Light" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registrar Venta en Tienda"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"/>

                <EditText
                    android:id="@+id/etNombreCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre del Cliente"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darker_gray"
                    android:inputType="textPersonName"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Teléfono"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darker_gray"
                    android:inputType="phone"
                    android:maxLength="9"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo de Comprobante"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

                <Spinner
                    android:id="@+id/spTipoComprobante"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etRuc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="RUC (11 dígitos)"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darker_gray"
                    android:inputType="number"
                    android:maxLength="11"
                    android:visibility="gone"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etRazonSocial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Razón Social"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darker_gray"
                    android:inputType="textCapWords"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seleccionar Producto"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

                <Spinner
                    android:id="@+id/spProductos"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/etCantidad"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Cant."
                        android:inputType="number"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:maxLength="3"/>

                    <Button
                        android:id="@+id/btnAnadirItem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Añadir"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@color/purple_700"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Productos Agregados"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvItemsVenta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:background="#EEEEEE"
                    android:padding="4dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvFechaVenta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha: DD/MM/AAAA"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pago: "
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/spMetodoPago"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:background="@android:drawable/btn_dropdown"
                        android:layout_weight="1"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTotalVenta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total: S/ 0.00"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textAlignment="viewEnd"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btnGuardarVenta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirmar Venta"
                    android:enabled="false"
                    android:backgroundTint="@color/purple_700"
                    android:padding="12dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_lateral"
        app:headerLayout="@layout/nav_header" />

</androidx.drawerlayout.widget.DrawerLayout>