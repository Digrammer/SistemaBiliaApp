<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logobiblia"
            android:layout_gravity="center"
            android:contentDescription="Logo Biblia" />

        <!-- Nombre -->
        <EditText
            android:id="@+id/edtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:padding="12dp"
            android:background="@drawable/edt_background"
            android:layout_marginTop="16dp"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="textPersonName" />

        <!-- Apellido -->
        <EditText
            android:id="@+id/edtApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellido"
            android:padding="12dp"
            android:background="@drawable/edt_background"
            android:layout_marginTop="8dp"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="textPersonName" />

        <!-- Correo -->
        <EditText
            android:id="@+id/edtCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo (debe ser @gmail.com)"
            android:padding="12dp"
            android:background="@drawable/edt_background"
            android:layout_marginTop="8dp"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="textEmailAddress" />

        <!-- Contraseña con ojo -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/edtContrasena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:padding="12dp"
                android:background="@drawable/edt_background"
                android:inputType="textPassword"
                android:textColorHint="@android:color/darker_gray"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/imgOjoContrasena"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="4dp"
                android:src="@drawable/ic_ojito"
                android:contentDescription="Mostrar/Ocultar contraseña" />
        </RelativeLayout>

        <!-- DNI -->
        <EditText
            android:id="@+id/edtDni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DNI (8 dígitos)"
            android:padding="12dp"
            android:background="@drawable/edt_background"
            android:layout_marginTop="8dp"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="number"
            android:maxLength="8" />

        <!-- Teléfono -->
        <EditText
            android:id="@+id/edtTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono (9 dígitos)"
            android:padding="12dp"
            android:background="@drawable/edt_background"
            android:layout_marginTop="8dp"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="phone"
            android:maxLength="9" />

        <!-- Dirección (libre) -->
        <EditText
            android:id="@+id/edtDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dirección (opcional)"
            android:padding="12dp"
            android:background="@drawable/edt_background"
            android:layout_marginTop="8dp"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="textPostalAddress" />

        <!-- Botón amarillo forzado -->
        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:textColor="#000000"
            android:backgroundTint="#FFD60A"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
